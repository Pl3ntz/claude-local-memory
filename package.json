{
  "name": "claude-local-memory-dev",
  "version": "0.1.0",
  "description": "Build tools for claude-local-memory plugin",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "build": "node scripts/build.js",
    "clean": "rm -rf plugin/scripts/*.cjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write ."
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@vitest/coverage-v8": "^4.0.18",
    "esbuild": "^0.25.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2"
  }
}
